{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Depurar Go Backend",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend",
      "env": {},
      "args": [],
